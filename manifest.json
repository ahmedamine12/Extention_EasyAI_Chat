{
  "manifest_version": 3,
  "name": "EasyAI Chat",
  "version": "1.0.0",
  "description": "Effortless AI chat, anywhere.",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/easyChat.png",
      "32": "icons/easyChat.png",
      "48": "icons/easyChat.png",
      "128": "icons/easyChat.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "options_page": "settings/settings.html",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/easyChat.png",
    "32": "icons/easyChat.png",
    "48": "icons/easyChat.png",
    "128": "icons/easyChat.png"
  }
} 